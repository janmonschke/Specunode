#games
  float none
  display block
  margin 0 auto

  input[type=text]
    display inline
    margin-left 10px

  ul
    li
      padding 10px
      cursor pointer

      &:first-child
        background-color #E54661
        color white

      &:nth-child(2)
        background-color #FFA644

      &:nth-child(3)
        background-color #998A2F

      &:nth-child(4)
        background-color #2C594F

      &.selected
        border-bottom 2px solid black